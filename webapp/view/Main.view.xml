<mvc:View controllerName="gridlayout.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        <content>
            <l:Grid defaultSpan="XL12 L12 M12 S12" containerQuery="true" class="sapUiMediumMargin">
                <l:content>
                    <VBox width="100%">
                        <VBox >
                            <Label text="Segment" required="true"/>
                            <ComboBox placeholder="Select option" width="100%">
                                <core:Item key="value1" text="Value 1" />
                                <core:Item key="value2" text="Value 2" />
                                <core:Item key="value3" text="Value 3" />
                                <core:Item key="value4" text="Value 4" />
                            </ComboBox>
                        </VBox>   
                        <VBox >
                            <Label text="Request Type" required="true" />
                            <ComboBox placeholder="Select option" width="100%" selectionChange="onRequestTypeChange">
                                <core:Item key="value1" text="Value 1" />
                                <core:Item key="value2" text="Value 2" />
                                <core:Item key="value3" text="Value 3" />
                                <core:Item key="value4" text="Value 4" />
                            </ComboBox>
                        </VBox> 
                        <layoutData>
                            <l:GridData
                                span="XL6 L6 M6 S6" />
                        </layoutData>  
                    </VBox>
                    <VBox >
                        <VBox >
                            <Label text="Department" required="true"/>
                            <ComboBox placeholder="Select option" width="100%">
                                <core:Item key="value1" text="Value 1" />
                                <core:Item key="value2" text="Value 2" />
                                <core:Item key="value3" text="Value 3" />
                                <core:Item key="value4" text="Value 4" />
                            </ComboBox>
                        </VBox>   
                        <VBox >
                            <Label text="Account Type" required="true"  />
                            <ComboBox placeholder="Select option" width="100%" >
                                <core:Item key="value1" text="Value 1" />
                                <core:Item key="value2" text="Value 2" />
                                <core:Item key="value3" text="Value 3" />
                                <core:Item key="value4" text="Value 4" />
                            </ComboBox>
                        </VBox>  
                        <layoutData>
                            <l:GridData
                                span="XL6 L6 M6 S6" />
                        </layoutData>  
                    </VBox>
                    <core:Fragment fragmentName="gridlayout.view.fragment.RequestType_1" type="XML"/>  
                    <core:Fragment fragmentName="gridlayout.view.fragment.RequestType_2" type="XML"/>         
                </l:content>
            </l:Grid>
        </content>
    </Page>
</mvc:View>